/* pages/accounts/accounts.wxss */
.pageContainer{
    background-color: rgba(230, 230, 230, 0.2);
}
.userID{
    width: 750rpx;
    margin-top: 65rpx;
    justify-content: flex-start;
    align-content:center;
}
.userID image{
    width:120rpx;
    height: 120rpx;
    margin:30rpx;
    box-sizing: border-box;
    border: 5rpx solid #FFF;
    border-radius: 50%;
}
.userID text{
    font-size: 30rpx;
    line-height: 180rpx;
}

.userInfo,userShop,user{
    width:750rpx;
    line-height:80rpx;
    background-color: #FFF;
    justify-content: space-between;
}
.userInfo text:first-child{
    margin-left: 20rpx;
}
.userInfo text:last-child{
    color:#999173;
    margin-right: 20rpx;
}
.mg{
    margin-bottom: 30rpx;
}
.brd{
    border-bottom: 1rpx solid #eee;
}